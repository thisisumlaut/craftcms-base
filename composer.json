{
  "name": "thisisumlaut/craftcms-base",
  "description": "A base CraftCMS installation as used by Umlaut",
  "version": "1.0.0",
  "require": {
    "craftcms/cms": "^3.6.4",
    "vlucas/phpdotenv": "^3.4.0",
    "craftcms/postmark": "2.1.0",
    "craftcms/redactor": "2.8.7",
    "dolphiq/sitemap": "1.3.2",
    "verbb/field-manager": "2.2.4",
    "verbb/redactor-tweaks": "2.0.4",
    "wildbit/postmark-php": "^4.0"
  },
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "7.2.5"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}